
    
    
<div class="container">
  <p id ="notice"></p>
    <h4 class="text-dark bg-light w-25 text-center mb-y">商品一覧</h4>
    
    
    <table class="table">
      <thead>
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      
      
      
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %></td>
          <td><%= item.price  %></td>
          <td><% if @item.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %></td>
        </tr>
        <% end %>
      </tbody>
      
    </table>
    
</div>