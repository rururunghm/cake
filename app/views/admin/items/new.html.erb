<div class="container">
  <p id ="notice"></p>
    <h5 class="text-dark bg-light text-left w-25 mb-4 px-3">商品新規登録</h5>
    
    <%= form_with model: @item, url: "/admin/items", method: :post do |f| %>
    
    <div class="field">
      <div class="row">
        <div class="col">
          <%= f.label "商品画像" , class: "col-sm-3 col-form-label" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
    </div>
    
    <div class="field">
      <div class="row">
        <div class="col">
          <%= f.label "商品名" , class: "col-sm-3 col-form-label" %>
          <%= f.text_field :name, class: 'form-control-sm '%>
        </div>
      </div>
    </div>
    
    <div class="field">
      <div class="row">
        <div class="col">
          <div class="md-3">
          <%= f.label "商品説明" , class: "col-sm-3 col-form-label" %>
          <%= f.text_area :introduction, class: 'form-control-sm ' %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="field">
      <div class="row">
        <div class="col">
          <%= f.label "税抜価格" , class: "col-sm-3 col-form-label" %>
          <%= f.text_area :price,class: 'form-control-sm ' %>円
        </div>
      </div>
    </div>
    
    <div class="field">
      <div class="row">
        <div class="col">
          <%= f.label "販売ステータス" , class: "col-sm-3 col-form-label" %>
          <div class="form-check">
            <input class="form-check-input" type="radio">
              <label class="form-check-label" for="flexRadioDefault1">
                販売中
              </label>
          </div>
          
          <div class="form-check">
            <input class="form-check-input" type="radio">
              <label class="form-check-label" for="flexRadioDefault2">
                販売停止中
              </label>
          </div>
        </div>
      </div>
    </div>
    
    
        
    <div class="actions text-center">
      <%= f.submit "新規登録" %>
    </div>
          
    <% end %>
    
    
</div>