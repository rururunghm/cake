<div class="container">
  <p id ="notice"></p>
    <h4 class="text-dark bg-light w-50 text-center mb-y">注文履歴一覧</h4>
    
    <div class="row">
        <div class="col">    
           <table class="table">
              <thead class="bg-light border">
                <tr>
                  <th scope="col">購入日時</th>
                  <th scope="col">購入者</th>
                  <th scope="col">注文個数</th>
                </tr>
              </thead>
    
          <tbody>
            <% @orders.each do |order| %> 
                <tr>
                  <td>
                      <%= link_to admin_order_path(order.id)  do %>
                          <%= order.created_at %>
                      <% end %>
                  </td>
                  <td>
                      <%= order.address_name %>
                  </td>
                  <td>
                      <%# total = 0 %>
                      <%# order.order_details.each do |order_detail| %>
                          <%# total += order_detail.amount %>
                      <%# end %>
                      <%#= total %>
                      <%= order.order_details.sum(:amount) %>
                  </td>
                </tr>
            <% end %>
          </tbody> 
  
        </div>
    </div>  
    
</div>