
<div class="container">
  
    <p id ="notice"></p>
    <h5 class="text-dark bg-light text-left w-25 mb-4 px-3">管理者ログイン</h5>
  
   
<%= form_with model: @customer, url: customer_session_path do |f| %>

  <div class="field">
    <div class="row">
      <div class="col">
      <%= f.label "メールアドレス" , class: "col-sm-4 col-form-label" %>
      <%= f.text_field :email,autofocus: true, autocomplete: "email", class: 'form-control-sm ' %>
      </div>
    </div>
  </div>
        
  <div class="field">
    <div class="row">
      <div class="col">
      <%= f.label "パスワード（確認用)", class: "col-sm-4 col-form-label" %>
      <%= f.text_field :password, class: 'form-control-sm ' %>
      </div>
    </div>
  </div>
  


    <div class="actions text-center">
      <%= f.submit "ログイン" %>
    </div>
<% end %>

<%= render "admin/shared/links" %>
        
        
      
   
  
</div>