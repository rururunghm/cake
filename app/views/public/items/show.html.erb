<div class="container">
  <p id ="notice"></p>
  
  
    <div class="row">
      <div class="col">
        
      <%= form_with model: @item, url: admin_item_path do |f| %>
      
       
        <%= image_tag @item.image, size: '300x200' %>
       </div>
    
      <div class="col">
        
        <h2 class="mb-2"><%= @item.name %></h2>
        <h4 class="mb-5"><%= @item.introduction %></h4>
        <h4 class="mb-3">￥<%= (@item.price*1.10).floor %>(税込)</h4>
        
        <%= f.select :amount, [['1',1], ['2',2], ['3',3]] %>
        
        <%= f.submit "カートに入れる", class:"btn btn-success mx-3" %>
        
      <% end %>
      
      </div>
   </div> 
  
</div>