    <div class="w-100"></div>
    <div class="col-6 col-sm-4 bg-light border py-2">郵便番号</div>
    <div class="col-6 col-sm-6 border py-2"><%= @customer.postal_code %></div>
    
    <div class="w-100"></div>
    <div class="col-6 col-sm-4 bg-light border py-2">住所</div>
    <div class="col-6 col-sm-6 border py-2"><%= @customer.address %></div>
    
    <div class="w-100"></div>
    <div class="col-6 col-sm-4 bg-light border py-2">電話番号</div>
    <div class="col-6 col-sm-6 border py-2"><%= @customer.telephone_number %></div>
    
    <div class="w-100"></div>
    <div class="col-6 col-sm-4 bg-light border py-2">メールアドレス</div>
    <div class="col-6 col-sm-6 border py-2"><%= @customer.email %></div>
  
  </div>
    
  <div class="row my-3">
    <div class="row">
      <h4>配送先</h4>
      <div class="col-sm-1"></div>
      <%= link_to "一覧を見る", customers_information_edit_path, class: "btn btn-primary" %>
    </div>
  </div>
    
  <div class="row my-3">
