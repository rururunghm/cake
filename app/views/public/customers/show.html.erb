<div class="container">
  <p id ="notice"></p>
  
  <div class="col-sm-2 text-dark bg-light text-center mb-4 ml-5"><h4>マイページ</h4></div>
  
  <div class="row my-3">
    <div class="row">
      <h4>登録情報</h4>
      <div class="col-sm-1"></div>
      <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
    </div>
  </div>
  
   
  
  <div class="row">
    
    <div class="col-6 col-sm-4 bg-light border py-2">氏名</div>
    <div class="col-6 col-sm-6 border py-2"><%= @customer.first_name %>
    <%= @customer.last_name %></div>
    
    <div class="w-100"></div>
    <div class="col-6 col-sm-4 bg-light border py-2">カナ</div>
    <div class="col-6 col-sm-6 border py-2"><%= @customer.first_name_kana %>
