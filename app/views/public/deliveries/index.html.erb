<div class="container">
  <p id ="notice"></p>
  
  <div class="col-sm-3 text-dark bg-light text-center mb-4 ml-5"><h4>配送先登録/一覧</h4></div>
  
  <div class="row-md">
  
    <%= form_with model: @delivery, url: deliveries_path, method: :post do |f| %>
    
      <div class="field">
        <div class="row">
          <div class="col-sm-2">
            <%= f.label "郵便番号", class: "col-form-label" %>
          </div>
          <div class="col-sm-1"></div>
          <div class="col-sm-3">
            <%= f.text_field :gip_code %>
          </div>
        </div>
      </div>
      
      <div class="field">
        <div class="row">
          <div class="col-sm-2">
            <%= f.label "住所", class: "col-form-label" %>
          </div>
          <div class="col-sm-1"></div>
          <div class="col-sm-3">
            <%= f.text_field :address %>
          </div>
        </div>
      </div>
      
      <div class="field">
        <div class="row">
          <div class="col-sm-2">
            <%= f.label "宛名", class: "col-form-label" %>
          </div>
          <div class="col-sm-1"></div>
          <div class="col-sm-9">
            <%= f.text_field :address_name, class: "mr-5" %><%= f.submit "新規登録", class: "btn btn-success ml-5" %>
          </div>
        </div>
      </div>
    
      
      </div>
        
    <% end %>
  </div>
  
  
    
    <table class="table mt-5 ">
      
          <thead class="bg-light border">
            <tr>
              <th scope="col">郵便番号</th>
              <th scope="col">住所</th>
              <th scope="col">宛名</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          
          <tbody>
          <% @deliveries.each do |deliveries| %>
            <tr>
              <td><%#= current_customer.deliveries.postal_code %></td>
              <td><%#= current_customer.deliveries.address %></td>
              <td><%#= current_customer.deliveries.address_name %></td>
          
              <td>
                <%= link_to "編集する", edit_delivery_path(deliveries.id),class: "btn btn-sm btn-success" %>
                <%= link_to "削除する", deliveries_path(deliveries.id), method: :delete, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
            
          <% end %>
          </tbody>
        </table>
    
 
  
</div>