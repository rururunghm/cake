<div class="container">
  <p id ="notice"></p>
  
  <div class="col-sm-3 text-dark bg-light text-center mb-4 ml-5"><h4>配送先登録/一覧</h4></div>
  
  <div class="row">
  
    <%= form_with model: @derivries do |f| %>
    
      <h4 class="col-6 col-sm-4 py-2">郵便番号</h4>
      <div class="col-6 col-sm-6 py-2"><%= f.file_field :gip_code %></div>
        
      <h4 class="col-6 col-sm-4 py-2">住所</h4>
      <div class="col-6 col-sm-6 py-2"><%= f.text_field :address %></div>
        
      <h4 class="col-6 col-sm-4 py-2">宛名</h4>
      <div class="col-6 col-sm-6 py-2"><%= f.text_area :address_name %>
      
      
      <%= f.submit "新規登録", class: "btn btn-success" %></div>
        
    <% end %>
  </div>
  
</div>