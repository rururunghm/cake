<div class="container">
  <p id ="notice"></p>
  
  <div class="col-sm-3 text-dark bg-light text-center mb-4 ml-5"><h4>配送先編集</h4></div>
  
  <%= form_with model: @delivery do |f| %>
  
  <div class="field">
    <div class="row">
      <div class="col-sm-4">
      <%= f.label "郵便番号(ハイフンなし)", class: "col-form-label" %>
      </div>
      <div class="col-sm-1"></div>
      <div class="col-sm-3">
      <%= f.text_field :gip_code, class: 'form-control-sm ' %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row">
      <div class="col-sm-4">
      <%= f.label "住所", class: "col-form-label" %>
      </div>
      <div class="col-sm-1"></div>
      <div class="col-sm-3">
      <%= f.text_area :address, class: 'form-control-sm ' %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="row">
      <div class="col-sm-4">
      <%= f.label "宛名", class: "col-form-label" %>
      </div>
      <div class="col-sm-1"></div>
      <div class="col-sm-3">
      <%= f.text_field :address_name, class: 'form-control-sm ' %>
      </div>
    </div>
  </div>
  
  <div class="actions text-center">
      <%= f.submit "編集内容を保存", class:"btn btn-success" %>
  </div>
  
  <% end %>
  
</div>