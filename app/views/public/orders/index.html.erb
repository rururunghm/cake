<div class="container">
  <p id ="notice"></p>
    <h4 class="text-dark bg-light w-50 text-center mb-y">注文履歴一覧</h4>
    
    <div class="row">
        <div class="col">    
           <table class="table">
              <thead class="bg-light border">
                <tr>
                  <th scope="col">注文日</th>
                  <th scope="col">配送先</th>
                  <th scope="col">注文商品</th>
                  <th scope="col">支払金額</th>
                  <th scope="col">注文詳細</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
    
          <tbody>
            <% @orders.each do |order| %> 
                <tr>
                  <td><%= order.created_at%></td>
                  <td><%= order.gip_code %></br>
                      <%= order.address %></br>
                      <%= order.address_name %></td>
                  <td>
                    <% order.order_details.each do |order_detail| %>
                      <%= order_detail.item.name %></br>
                    <% end %>
                  </td>
                  <td><%= order.invoice_amount %></td>
                  <td>
                  <%= link_to "表示する", order_path(Order.find(order.id)) , class:  "btn btn-primary" %></td>
                </tr>
            <% end %>
          </tbody> 
  
        </div>
    </div>  
    
</div>