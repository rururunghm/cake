<div class="container">
  <p id ="notice"></p>
    <h4 class="text-dark bg-light w-50 text-center mb-y">注文履歴一覧</h4>
    
    <div class="row">
        <div class="col">    
           <table class="table">
              <thead class="bg-light border">
                <tr>
                  <th scope="col">注文日</th>
                  <th scope="col">配送先</th>
                  <th scope="col">注文商品</th>
                  <th scope="col">支払金額</th>
                  <th scope="col">注文詳細</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
    
          <tbody>
            <% @orders.each do |orders| %> 
                <tr>
                  <td><%= orders.created_at%></td>
                  <td><%= orders.gip_code %></br>
                      <%= orders.address %></br>
                      <%= orders.address_name %></td>
                  <td><%#= @order_detail.item_id.name %></td>
                  <td><%#= %></td>
                  <td>
                  <%= link_to "表示する", order_path(Order.find(orders.id)) , class:  "btn btn-primary" %></td>
                </tr>
            <% end %>
          </tbody> 
  
        </div>
    </div>  
    
</div>