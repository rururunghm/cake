<div class="container">
  <p id ="notice"></p>
    <h4 class="text-dark bg-light w-25 text-center mb-y">注文情報入力</h4>
    
    <%= form_with model: @order, url: '/orders/confirm' do |f| %>
    
    <h4>支払方法</h4>
      <div class="col">
        <%= f.radio_button :payment_methods, Order.payment_methods.key(0) %>
        <%= f.label :payment_methods_credit_card, Order.payment_methods_i18n[:credit_card] %>
      </div>
      
      <div class="col">
        <%= f.radio_button :payment_methods, Order.payment_methods.key(1) %>
        <%= f.label :payment_methods_transfer, Order.payment_methods_i18n[:transfer]%>
      </div>  
      
      
        
    <h4>お届け先</h4>
    
      <div class="col">
          <%= f.radio_button :delivery_method, 0 %>
          <%= f.label :delivery_method, "ご自身の住所" %>
        <div class="col">
          <%= @cus.postal_code %><%= @cus.address %><%= @cus.first_name %><%= @cus.last_name %>
        </div>
      </div>
            
      <div class="col">
          <%= f.radio_button :delivery_method, 1 %>
          <%= f.label :delivery_method, "登録済住所から選択", class: "mt-3" %>
        <div class="col">
         <%= f.select :select_address, options_from_collection_for_select(Delivery.all, :id, :delivery_display) %>
        </div>
      </div>
      
      <div class="col">  
          <%= f.radio_button :delivery_method, 2 %>
          <%= f.label :delivery_method, "新しいお届け先", class: "mt-3" %>
        <div class="col">
          <%= form_with model: @order, url: new_order_path do |f| %>
            <div class="col">
              <%= f.label "郵便番号" , class: "col-sm-3 col-form-label" %>
              <%= f.text_field :gip_code, class: 'form-control-sm '%>
            </div>
            
            <div class="col">
              <%= f.label "住所" , class: "col-sm-3 col-form-label" %>
              <%= f.text_field :address, class: 'form-control-sm '%>
            </div>
            
            <div class="col">
              <%= f.label "宛名" , class: "col-sm-3 col-form-label" %>
              <%= f.text_field :address_name, class: 'form-control-sm '%>
            </div>
            
            <div class="actions text-center">
              <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
            </div>
            
          <% end %>
        </div>
      </div>  
    <% end %>
</div>